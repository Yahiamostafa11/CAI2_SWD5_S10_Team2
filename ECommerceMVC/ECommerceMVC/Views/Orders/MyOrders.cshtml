@model IEnumerable<ECommerceMVC.Models.Order>
@{
    ViewBag.Title = "My Orders";
}

<h2>Order History</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order #</th>
            <th>Date</th>
            <th>Total</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.OrderAmount.ToString("C")</td>
                <td>@order.OrderStatus</td>
            </tr>
        }
    </tbody>
</table>
