@model IEnumerable<ECommerceMVC.Models.Cart>
@{
    ViewBag.Title = "Your Cart";
}

<h2>Your Shopping Cart</h2>

@if (!Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Qty</th>
                <th>MRP</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product.ProductName</td>
                    <td>@item.ItemTotal</td>
                    <td>@item.Product.MRP.ToString("C")</td>
                    <td>@item.GrandTotal.ToString("C")</td>
                    <td>
                        <a href="@Url.Action("Remove", "Cart", new { id = item.CartId })" class="btn btn-sm btn-danger">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="@Url.Action("Checkout", "Cart")" class="btn btn-success">Checkout</a>
}
