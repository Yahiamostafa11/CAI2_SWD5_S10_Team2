@model IEnumerable<ECommerceMVC.Models.Cart>

@{
    ViewBag.Title = "Cart";
}

<h2>Your Cart</h2>

<table class="table">
    <tr>
        <th>Product</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Product.ProductName</td>
            <td>@item.Product.MRP</td>
            <td>@item.ItemTotal</td>
            <td>@item.GrandTotal</td>
            <td>
                @Html.ActionLink("Remove", "Remove", new { id = item.CartId }, new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Checkout", "Checkout", "Cart", null, new { @class = "btn btn-primary" })
</p>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

